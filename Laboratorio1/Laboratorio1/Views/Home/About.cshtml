@{
    ViewBag.Title = "Mi primera vista";
    String nombreAutor = "Marcel Castro Grey";
    int nota = 100;
}
<html>
<head>
    <title> @ViewBag.Title </title>
</head>
<body>
    <div>
        <h1>Mi primera vista</h1>
        <h2>¡Hola Mundo!</h2>
        <p>
            <strong>Yo soy: </strong>@nombreAutor <br />
            Mi nota el día de hoy es: <input type="number" value="@nota" placeholder="90" />
        </p>
        <hr />
    </div>
    <div>
        <label>Mi numero de carne es:</label>
        <input type="text" placeholder="Numero" />
        <hr />
    </div>
    <div>
        <label>Caja para texto</label>
        <input type="text" placeholder="Buenas tardes" />
        <hr />
    </div>
    <div>
        <a class="btn btn-info" href="/Home/Index"> Volver a la página de inicio </a> <br />
    </div>
</body>
</html>